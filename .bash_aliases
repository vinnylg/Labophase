# open using default X application
alias o=xdg-open

# copy and paste from terminal
alias c=xclip
alias p="xclip -o"
alias xcs="xclip -selection clipboard"
alias xps="xclip -o -selection clipboard"

# bare git to sync dot and settings files
alias dotsync='/usr/bin/git --git-dir=$HOME/.dotsync --work-tree=$HOME'

# utilities
alias bat=batcat  # A cat(1) clone with syntax highlighting and Git integration.


